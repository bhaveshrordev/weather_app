<h2 class="card-title text-center">Forecast Data</h2>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Date</th>
      <th>Maximum Temperature</th>
      <th>Minimum Temperature</th>
      <th>Average Temperature</th>
    </tr>
  </thead>

  <% @weather_data["forecast"]["forecastday"].each do |forecast| %>
    <tbody>
      <tr>
        <td><%= formatted_date(forecast["date"]) %></td>
        <td><%= format_temperature(forecast["day"]["maxtemp_c"], forecast["day"]["maxtemp_f"]) %></td>
        <td><%= format_temperature(forecast["day"]["mintemp_c"], forecast["day"]["mintemp_f"]) %></td>
        <td><%= format_temperature(forecast["day"]["avgtemp_c"], forecast["day"]["avgtemp_f"]) %></td>
      </tr>
    </tbody>
  <% end %>
</table>